<div class="container">
  <h1>Création d'un article</h1>
  <%= simple_form_for(@article) do |f| %>
    <%= f.error_notification %>
    <%= f.input :title, label: "Titre" %>
    <%= f.input :category_id,
                      required: true,
                      autofocus: true,
                      collection: @categories,
                      label_method: :nom,
                      value_method: :id,
                      include_blank: 'Sélectionnez une catégorie',
                      label: "Catégories" %>
    <%= f.input :content, label: "Contenu" %>
    <%= f.input :images,
                      as: :file,
                      label: "Choisir des images",
                      input_html: {
                        multiple: true
                      }
          %>
    <%= f.button :submit, "Créer", class: "btn btn-primary" %>
  <% end %>
</div>
