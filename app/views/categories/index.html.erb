
<div class="container">
  <h1>Liste des catégories</h1>
  <p><%= link_to "Créer", new_category_path %></p>
  <div class="row">
    <table class="table liste-categories table-striped table-bordered">
      <th>Nom</th>
      <th>Détail</th>
      <% @categories.each do |category| %>
      <tr>
        <td><%= category.nom %></td>
        <td>
          <%= link_to "Voir", category_path(category) %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
